<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MiniUserProfileFragment"
    android:background="@color/not_maincolorfragment"
    android:padding="10dp"
    android:scrollbarAlwaysDrawHorizontalTrack="true">

    <!--androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewHoriz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scrollbars="horizontal"
        tools:listitem="@layout/for_recycle_horizontal"/-->
    
    <HorizontalScrollView
        android:id="@+id/horiz_SV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:fillViewport="true"
        android:measureAllChildren="false"
        android:scrollbars="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="top"
                android:src="@android:drawable/ic_menu_gallery"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="0dp"
                android:text="@string/name_user"
                android:textColor="@color/white"
                android:textSize="8pt"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/textAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="35dp"
                android:text="@string/age_user"
                android:textColor="@color/white"
                android:textSize="8pt"
                android:textStyle="italic"/>

            <TextView
                android:id="@+id/textQuote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="70dp"
                android:text="@string/quote_user"
                android:textColor="@color/white"
                android:textSize="8pt"
                android:textStyle="italic"/>

        </RelativeLayout>

    </HorizontalScrollView>

</FrameLayout>